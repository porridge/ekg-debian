# $Id$

prefix = @prefix@
datadir = @datadir@
mandir = @mandir@
exec_prefix = @exec_prefix@
bindir = @bindir@
libexecdir = @libexecdir@
sysconfdir = @sysconfdir@

CC = @CC@ 
CFLAGS = -I.. -I../lib @CFLAGS@ -Wall -DDATADIR=\"${datadir}/ekg\" -DSYSCONFDIR=\"${sysconfdir}\"
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

MAKE = @MAKE@
AR = @AR@
INSTALL = @INSTALL@
STRIP = @STRIP@

OBJS = stuff.o commands.o events.o themes.o vars.o dynstuff.o userlist.o ekg.o xmalloc.o mail.o msgqueue.o @OBJS@ ui-batch.o ui-none.o
SRCS = $(OBJS:.o=.c)

#

all:	dep ekg @ioctld@

ekg:	$(OBJS) @libgadu_a@
	$(CC) $(CFLAGS) -o ekg $(OBJS) -L../lib $(LDFLAGS) $(LIBS) @lgadu@ @libgadu_a@

ioctld:	ioctld.c
	$(CC) $(CFLAGS) ioctld.c -o ioctld $(LIBS)

dep:	.depend

.depend:	$(SRCS)
	$(CC) -MM $(CFLAGS) $(SRCS) 1> .depend

#

install: all install-ekg @install_ioctld@

install-ekg:	@strip_ekg@
	$(INSTALL) -d $(DESTDIR)$(bindir)
	$(INSTALL) -m 755 ekg $(DESTDIR)$(bindir)

install-ioctld:	@strip_ioctld@
	$(INSTALL) -d $(DESTDIR)$(libexecdir)
	$(INSTALL) -m 755 ioctld $(DESTDIR)$(libexecdir)

strip-ekg:
	$(STRIP) ekg

strip-ioctld:
	$(STRIP) ioctld

#

clean:
	rm -f *.o ekg ioctld search core .depend

distclean:	clean
	rm -f *~ Makefile

#

ifneq ($(wildcard .depend),)
include .depend
endif

