# $Id$

prefix = @prefix@
datadir = @datadir@
mandir = @mandir@

CC = @CC@ 
CFLAGS = @CFLAGS@ -I.. -I../lib -DTHEMES_DIR=\"$(datadir)/ekg/themes\"
LIBS = @LIBS@ ../lib/libgadu.a

MAKE = @MAKE@
AR = @AR@
INSTALL = @INSTALL@

OBJS = stuff.o commands.o events.o themes.o vars.o dynstuff.o userlist.o ekg.o

#

all:	ekg @ioctld@

ekg:	$(OBJS)
	$(CC) $(CFLAGS) -o ekg $(OBJS) $(LIBS)

ioctld:	ioctld.c
	$(CC) $(CFLAGS) ioctld.c -o ioctld

#

install: all install-ekg @install_ioctld@

install-ekg:
	$(INSTALL) -m 755 -d $(prefix)/bin
	$(INSTALL) -m 755 ekg $(prefix)/bin

install-ioctld:
	$(INSTALL) -m 755 -d $(prefix)/bin
	$(INSTALL) -m 4755 ioctld $(prefix)/bin

#

clean:
	rm -f *.o ekg ioctld search core 

distclean:	clean
	rm -f *~ Makefile


