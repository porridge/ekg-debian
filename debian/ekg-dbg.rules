#!/usr/bin/make -f

include debian/common.rules

INSDIR = `pwd`/debian/ekg-dbg/usr
LIBINSDIR = `pwd`/debian/ekg-dbg-dev/usr
PACKAGE_SUFFIX= -dbg
BUILDLIB = yes
CONFOPTS = --with-debug
ORGMAKE = all

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -f src/ekg Makefile config.cache config.log config.status
	dh_clean

binary:
	$(MAKE) -f debian/build.rules CONFOPTS="$(CONFOPTS)" BUILDLIB=$(BUILDLIB) INSDIR=$(INSDIR) LIBINSDIR=$(LIBINSDIR) PACKAGE_SUFFIX=$(PACKAGE_SUFFIX) ORGMAKE="$(ORGMAKE)" binary clean
.PHONY: binary
